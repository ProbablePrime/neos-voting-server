{
  "name": "typescript-boilerplate",
  "description": "A boilerplate to help me get started on typescript stuff quickly",
  "author": "Richard Fox <richard.fox@ahref.co.uk>",
  "license": "MIT",
  "version": "0.0.1",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "build:ts": "rimraf lib dist && tsc",
    "build": "npm run build:ts",
    "test": "mocha --compilers ts:ts-node/register \"src/**/*.spec.ts\"",
    "prepublish": "npm run build",
    "lint": "tslint -c tslint.json --project tsconfig.json \"src/**/*.ts\" \"test/**/*.ts\"",
    "docs": "typedoc --out docs/ --mode file --excludeNotExported -tsconfig tsconfig.json --target ES6",
    "fmt": "prettier --write **/*.ts",
    "deps:update": "ncu -ua"
  },
  "engineStrict": true,
  "engines": {
    "node": ">= 8.0.0"
  },
  "private": true,
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.18",
    "@types/sinon": "^7.0.3",
    "@types/sinon-chai": "^3.2.2",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "npm-check-updates": "^2.15.0",
    "rimraf": "^2.6.3",
    "sinon": "^7.2.2",
    "sinon-chai": "^3.3.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "tslint-microsoft-contrib": "6.0.0",
    "typedoc": "^0.14.0",
    "typescript": "^3.2.2"
  },
  "prettier": {
    "parser": "typescript",
    "tabWidth": 4,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
