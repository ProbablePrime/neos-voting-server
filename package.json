{
  "name": "typescript-boilerplate",
  "description": "A boilerplate to help me get started on typescript stuff quickly",
  "author": "ProbablePrime <prime@ahref.co.uk>",
  "license": "MIT",
  "version": "0.1.0",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "build:ts": "rimraf lib dist && tsc",
    "build": "npm run build:ts",
    "test": "mocha --compilers ts:ts-node/register \"src/**/*.spec.ts\"",
    "prepublish": "npm run build",
    "lint": "tslint -c tslint.json --project tsconfig.json \"src/**/*.ts\" \"test/**/*.ts\"",
    "docs": "typedoc --out docs/ --mode file --excludeNotExported -tsconfig tsconfig.json --target ES6",
    "fmt": "prettier --write **/*.ts",
    "deps:update": "ncu -ua"
  },
  "engineStrict": true,
  "engines": {
    "node": ">= 12.0.0"
  },
  "private": true,
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.10.0",
    "@types/sinon": "^9.0.5",
    "@types/sinon-chai": "^3.2.4",
    "chai": "^4.2.0",
    "mocha": "^8.1.3",
    "npm-check-updates": "^9.0.0",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.3",
    "sinon-chai": "^3.5.0",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "tslint-microsoft-contrib": "^6.2.0",
    "typedoc": "^0.19.1",
    "typescript": "^4.0.2"
  },
  "prettier": {
    "parser": "typescript",
    "tabWidth": 4,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
