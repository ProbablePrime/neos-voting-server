{
  "name": "typescript-boilerplate",
  "description": "A boilerplate to help me get started on typescript stuff quickly",
  "author": "Richard Fox <richard.fox@ahref.co.uk>",
  "license": "MIT",
  "version": "0.0.1",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "build:ts": "rimraf lib dist && tsc",
    "build": "npm run build:ts",
    "test": "mocha --compilers ts:ts-node/register \"src/**/*.spec.ts\"",
    "prepublish": "npm run build",
    "lint": "tslint -c tslint.json --project tsconfig.json \"src/**/*.ts\" \"test/**/*.ts\"",
    "docs": "typedoc --out docs/ --mode file --excludeNotExported -tsconfig tsconfig.json --target ES6",
    "fmt": "prettier --write **/*.ts",
    "deps:update": "npm-check-updates -u"
  },
  "engineStrict": true,
  "engines": {
    "node": ">= 8.0.0"
  },
  "private": true,
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^2.2.48",
    "@types/node": "^9.4.7",
    "@types/sinon": "^4.3.0",
    "@types/sinon-chai": "^2.7.29",
    "chai": "^4.1.2",
    "mocha": "^5.0.4",
    "rimraf": "^2.6.2",
    "sinon": "^4.4.2",
    "sinon-chai": "^3.0.0",
    "ts-node": "^5.0.1",
    "tslint": "^5.7.0",
    "tslint-microsoft-contrib": "5.0.3",
    "typedoc": "^0.11.1",
    "typescript": "^2.7.2"
  },
  "prettier": {
    "parser": "typescript",
    "tabWidth": 4,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
